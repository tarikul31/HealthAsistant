<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="shihab.diu.com.healthassistantnew.MainActivity">



    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="159dp"
            android:layout_height="160dp"
            android:id="@+id/btn_disease_Prediction"
            android:background="@drawable/dp"

            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="159dp"
            android:layout_height="160dp"
            android:id="@+id/btn_doctor_info"
            android:background="@drawable/doctor"
            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="159dp"
            android:layout_height="160dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_about"
            android:background="@drawable/about"
            />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="159dp"
            android:layout_height="160dp"
            android:id="@+id/btn_hospital_info"
            android:background="@drawable/hospital"
            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="159dp"
            android:layout_height="160dp"
            android:id="@+id/btn_healthtips"
            android:background="@drawable/ht"
            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="159dp"
            android:layout_height="160dp"
            android:id="@+id/btn_help"
            android:background="@drawable/help"
            />

    </LinearLayout>



</LinearLayout>
